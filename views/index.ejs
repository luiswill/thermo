<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
      <link rel='stylesheet' href='/stylesheets/sidebar.css' />
      <script>
          function openNav() {
              document.getElementById("mySidebar").style.width = "250px";
              document.getElementById("main").style.marginLeft = "250px";
          }

          function closeNav() {
              document.getElementById("mySidebar").style.width = "0";
              document.getElementById("main").style.marginLeft= "0";
          }
      </script>

  </head>

  <% include sidebar.ejs %>

    <div id="main">
    <header><% include templates/header.ejs %></header>
	<h1><%= title %></h1>
	<div id="core">
		<style>
			#outsideWeather{
				background-image: url("/images/<%= weather.weather[0].main %>.jpg");
			}
		</style>
		<div id="outsideWeather">
			<%= weather.name%><br/>
			<%= weather.weather[0].main %></br>
			<span id="outsideTemp"><%= weather.main.temp %>°C</span> <br/>
		</div>
		
		<div id="homeTemp">
		
			<div id="homeTemp_header">Home Thermometer</div>
			
			<div id="currentTemp">
				<div id="getTemp">
					<a href="/" id="loadData">Update Temperature</a>
				</div>

				<div id="myTemp">
					<%= home %> °C
				</div>
			</div>
			
			<div id="updateTemp">
				<form method="post" action="/update">
				  New temp : <input type="number" name="changeTemp" >
					<button type="submit">change Temperature</button>
				</form>

			</div>
		</div>
	</div>
    </div>

  </body>
</html>
